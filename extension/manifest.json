{
  "manifest_version": 3,
  "name": "AdaptLearn â€“ Cognitive Accessibility",
  "version": "1.0.0",
  "description": "Apply dyslexia-friendly font, ADHD focus, and low vision styling on any website.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "AdaptLearn"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/fonts/*.woff2", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
